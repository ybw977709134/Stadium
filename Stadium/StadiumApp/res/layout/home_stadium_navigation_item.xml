<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/homepage_gridview_item_style" >
 	<!-- 图标 -->
 	<ImageView 
 	    android:id="@+id/home_stadium_navigation_item_image"
 	    android:layout_width="90dp"
 	    android:layout_height="90dp"
 	    android:background="@drawable/swim_normal"
 	    android:scaleType="centerCrop"/>
 	<TextView
 	    android:id="@+id/home_stadium_navigation_item_text"
 	    android:paddingTop="5dp"
 	    android:paddingBottom="4dp"
 	    android:layout_width="wrap_content"
 	    android:layout_height="wrap_content"
 	    android:text="游泳"
 	    android:textColor="#7D7D7D"
 	    android:textSize="@dimen/text_sixteen_size"  />
    
</LinearLayout>