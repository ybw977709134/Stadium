<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffffff"
    android:padding="5dp" >
    
    <!-- 用户ID -->
    <TextView android:id="@+id/users_id" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="暂无" android:textSize="@dimen/text_eighteen_size" android:textColor="@color/orangle_low"/>			

    <!-- 运动项目名称 -->
    <TextView android:id="@+id/pro_name" android:layout_marginBottom="5dp"  android:layout_width="match_parent" android:layout_height="wrap_content" android:text="暂无" android:textSize="@dimen/text_eighteen_size" android:textColor="@color/orangle_low"/>			

    <!-- 场馆名称 -->
    <TextView android:id="@+id/venues_ids" android:layout_marginBottom="5dp"  android:layout_width="match_parent" android:layout_height="wrap_content" android:text="暂无" android:textSize="@dimen/text_eighteen_size" android:textColor="@color/orangle_low"/>			
    
    <!-- 价格 -->
    <TextView android:id="@+id/pricess" android:layout_marginBottom="5dp"  android:layout_width="match_parent" android:layout_height="wrap_content" android:text="暂无" android:textSize="@dimen/text_eighteen_size" android:textColor="@color/orangle_low"/>			
 
    <!-- 消息创建时间 -->
    <TextView android:id="@+id/create_times" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="暂无" android:textSize="@dimen/text_eighteen_size" android:textColor="@color/orangle_low"/>			
    
</LinearLayout>
