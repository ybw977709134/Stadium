<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white" >
    <!-- 头部 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_size_60"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="#FF7900" > 
        <!-- 指向箭头 -->
        <ImageView
            android:id="@+id/about_us_back_arrow" 
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:paddingLeft="3dp"
            android:paddingStart="3.0dp"
            android:paddingRight="0.0dp"
            android:paddingEnd="0.0dp"
            android:src="@drawable/stadium_left_arrow"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true" />
        <!-- 主界面的标题 -->
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:text="@string/about_us"
			android:textSize="@dimen/text_twenty_five_size"
			android:textColor="@color/white"
            android:layout_centerInParent="true"/> 
    </RelativeLayout>
    
  <ScrollView 
      android:layout_width="match_parent"
      android:layout_height="match_parent">
      <LinearLayout 
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">
          <ImageView 
              android:layout_marginTop="10dp"
              android:layout_width="100dp"
              android:layout_height="100dp"
              android:background="@drawable/launch" 
              android:scaleType="centerCrop"
              android:layout_gravity="center_horizontal"/>
          <TextView
              android:layout_marginTop="10dp" 
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@string/about_us_contant"
              android:textSize="@dimen/text_sixteen_size"
              android:textColor="@color/black" /> 
      </LinearLayout> 
  </ScrollView>

</LinearLayout>

