<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <com.wqp.view.XMapView
            android:id="@+id/bmapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/invalid_bg_style" >

            <EditText
                android:id="@+id/txtAddr"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="2dp"
                android:layout_toLeftOf="@+id/btOk" 
                android:completionThreshold="2"
                android:background="@drawable/baidu_map_searchbox_style"
                android:drawableLeft="@drawable/qz_icon_seabar_search"
                android:hint="请输入搜索关键字" />

            <TextView
                android:id="@+id/btOk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="5dp"
                android:layout_toLeftOf="@+id/s2"
                android:text="搜索"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/s2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="4dp"
                android:layout_toLeftOf="@+id/btget"
                android:src="@drawable/slide_center" />

            <TextView
                android:id="@+id/btget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="定位"
                android:textSize="20sp" />
        </RelativeLayout>
    </FrameLayout>

</RelativeLayout>

