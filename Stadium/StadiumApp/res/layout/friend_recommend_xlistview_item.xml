<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingLeft="10dp"
    android:paddingStart="10dp"
    android:paddingRight="0.0dp"
    android:paddingEnd="0.0dp" > 
    
    <LinearLayout
        android:id="@+id/leftleft_invalid"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
        <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"   >
	        <!-- 场馆名称 -->
	        <TextView
	        	android:id="@+id/friend_recommend_xlistview_venuesname" 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="场馆名称"
	            android:textColor="#444444"
	            android:textSize="@dimen/text_sixteen_size"
	            android:layout_marginBottom="8dp" />
	         <!-- 运动类型-->

	        <TextView
	            android:id="@+id/friend_recommend_xlistview_sporttype"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" 
	            android:text="运动类型"
	            android:textColor="#444444"
	            android:textSize="@dimen/text_sixteen_size"
	            android:layout_marginBottom="8dp"  />
	        
	    </LinearLayout>
	    
        <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"  >
	        <!-- 开始时间 -->
	        <TextView
	        	android:id="@+id/friend_recommend_xlistview_starttime" 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="开始时间"
	            android:textColor="#444444"
	            android:textSize="@dimen/text_sixteen_size"
	            android:layout_marginBottom="8dp" />
	         <!-- 结束时间 -->
	        <TextView
	        	android:id="@+id/friend_recommend_xlistview_endtime"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="结束时间"
	            android:textColor="#444444"
	            android:textSize="@dimen/text_sixteen_size" 
	            android:layout_marginBottom="8dp"  /> 
	            
	       <!--人数上限 -->
	        <TextView
	        	android:id="@+id/friend_recommend_xlistview_takecount"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="人数上限"
	            android:textColor="#444444"
	            android:textSize="@dimen/text_sixteen_size" />
	    </LinearLayout> 
    </LinearLayout>
     
    <!-- 增加 -->
	<ImageView
        android:id="@+id/friend_recommend_xlistview_state" 
	    android:layout_width="40dp"
	    android:layout_height="40dp"
	    android:src="@drawable/friend_recommend_xlistview_add"
	    android:layout_alignParentRight="true"
	    android:layout_centerVertical="true"
        android:layout_marginRight="10dp"/>
	<!-- 底线 -->
	<View
	    android:layout_width="match_parent"
	    android:layout_height="2dp"
	    android:background="#BFB7AC"
	    android:layout_below="@+id/leftleft_invalid" 
	    android:layout_marginTop="5dp" />
	
</RelativeLayout>
