<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 设置补按下时的样式 ,圆角度为3,带有内边距,设置有按下的时的浅背景色(浅橙色),带有边框,宽度1dp,边框颜色为橙色-->
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="3dp"/>
            <padding android:left="5dp" android:top="3dp" android:right="5dp" android:bottom="3dp" />
            <solid android:color="#FFDB90"/>
            <stroke android:width="1dp" android:color="@color/white"/>
        </shape> 
    </item>
    
    <!-- 设置默认样式,背景为白色-->
	<item android:state_pressed="false" android:drawable="@color/white">  
	</item>
</selector>